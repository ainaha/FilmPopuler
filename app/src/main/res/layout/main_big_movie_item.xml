<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/big_movie_item_poster_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/movie_poster_image_description"
        android:minHeight="296dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_black_24dp" />

    <RelativeLayout
        android:id="@+id/big_movie_item_info_wrapper"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="8dp">

        <TextView
            android:id="@+id/big_movie_item_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="2"
            tools:text="Title" />
    </RelativeLayout>

</LinearLayout>